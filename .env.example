# QA Automation Platform - Environment Variables Template
# Copy this to .env and fill in your actual values

# Figma API Token
# Get your token from: https://www.figma.com/developers/api#access-tokens
FIGMA_TOKEN=your_figma_token_here

# Database configuration
DATABASE_URL=postgresql://qa_user:qa_password@localhost:5432/qa_automation

# Redis configuration  
REDIS_URL=redis://localhost:6379

# Logging
RUST_LOG=info,website_analyzer=debug

# MinIO/S3 configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=qa-automation-artifacts

# Test credentials for demo sites (update as needed)
TEST_USERNAME=your_test_email@example.com
TEST_PASSWORD=your_test_password

# LLM API Keys (add your actual keys here)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
AZURE_OPENAI_API_KEY=your_azure_api_key_here

# Service Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO